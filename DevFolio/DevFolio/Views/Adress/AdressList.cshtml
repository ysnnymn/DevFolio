@model List<DevFolio.Models.TblAdress>
@{
    ViewBag.Title = "AdressList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Adres Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Konum</th>
        <th>Mail Adresi</th>
        <th>Telefon Numarası</th>
        <th>Açıklama</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.AdressID</td>
    <td>@item.Location</td>
    <td>@item.Email</td>
    <td>@item.PhoneNumber</td>
    <td>@item.Description</td>
    <td><a href="/Adress/DeleteAdress/@item.AdressID"  class="btn btn-danger">Sil</a></td>
    <td><a href="/Adress/UpdateAdress/@item.AdressID"  class="btn btn-success">Güncelle</a></td>
</tr>
    
    }
</table>
@if (ViewBag.adresscount<1)
{
<a href="/Adress/CreateAdress" class="btn btn-info">Yeni Adres Girişi</a>
}


