﻿@model List<DevFolio.Models.TblProject>
@{
    ViewBag.Title = "ProjectList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Proje Listesi</h2>

<div class="container">



    <table class="table table-bordered">
        <tr class="table-secondary">
            <th>#</th>
            <th>Proje Başlık</th>
            <th>Proje Resim</th>
            <th>Proje Tarihi</th>
            <th>Kategori</th>
            <th>Güncelle</th>
            <th>Sil</th>
            <th>Github'ta Aç</th>
        </tr>

        @foreach (var item in Model)
        {


    <tr>
        <td>@item.ProjectID</td>
        <td>@item.Title</td>
        <td style="text-align: center;">
            <img src="~/Templates/devfolio-master/@item.CoverImageUrl" class="about-img" alt="Default" style="max-width: 50%; height: auto;" />
        </td>


        <td>@(((DateTime)item.CreatedDate).ToString("dd.MM.yyyy"))</td>

        <td>@item.TblCategory.CategoryName</td>
        <td><a href="https://github.com/ysnnymn?tab=repositories" class="btn-link">Github'ta Aç</a></td>
        <td><a href="/Project/DeleteProject/@item.ProjectID" class="btn btn-warning">Sil</a></td>
        <td><a href="/Project/UpdateProject/@item.ProjectID" class="btn btn-success">Güncelle</a></td>
    </tr>
        }


    </table>
    <a href="/Project/CreateProject/" class="btn btn-info">Yeni Proje Girişi</a>
</div>