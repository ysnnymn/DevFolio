@model DevFolio.Models.TblProject
@{
    ViewBag.Title = "UpdateProject";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Proje Güncelleme </h2>
<form method="post">
    @Html.HiddenFor(x => x.ProjectID)
    @Html.HiddenFor(x => x.CreatedDate)
    <label>Proje Başlığı</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />

    <label>Kategori</label>
    @Html.DropDownListFor(x => x.ProjectCategoryID, (List<SelectListItem>)ViewBag.category, new { @class = "form-control" })
    <br />

    <label>Proje Resmi</label>
    @Html.EditorFor(x => x.CoverImageUrl, new { htmlAttributes = new { @class = "form-control", type = "file" } })
    <br />
    <button class="btn btn-primary">Güncele</button>
    </form>

